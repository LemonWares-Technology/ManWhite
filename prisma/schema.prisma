// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        String    @id @default(uuid())
  email                     String    @unique
  password                  String? // Make password optional for social login users
  firstName                 String?
  lastName                  String?
  googleId                  String?   @unique // Store Google's unique ID
  avatarUrl                 String? // Profile picture from Google
  verified                  Boolean   @default(false)
  verificationCode          String?
  verificationCodeExpiresIn String?
  recoveryCode              String?
  refreshToken              String?
  recoveryCodeExpiresIn     DateTime?
  loginAttempts             Int       @default(0)
  loginLockedUntil          DateTime?

  phone                     String?
  gender                    String?
  dob                       DateTime?
  nationality               String?
  passportNo                String?
  passportExpiry            DateTime?
  role                      Role          @default(USER)
  bookings                  Booking[]
  reviews                   Review[]
  cart                      FlightCart[] // User can have multiple flights in cart
  oneTimeAccessToken        String?
  oneTimeAccessTokenExpires DateTime?
  adminToken                String?
  createdAt                 DateTime      @default(now())
  updatedAt                 DateTime      @updatedAt
  lastLoginAt               DateTime?
  lastActiveAt              DateTime?
  AccessToken               AccessToken[]
  AdminEmail                AdminEmail[]
}

model AccessToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model GuestUser {
  id         String    @id @default(uuid())
  email      String    @unique
  firstName  String
  lastName   String
  phone      String?
  address    String?
  postalCode String?
  city       String?
  country    String?
  bookings   Booking[] // Relation to bookings made by guest users
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([email])
}

enum Role {
  USER
  ADMIN
  AGENT
}

model Booking {
  id             String      @id @default(uuid())
  userId         String? // Make userId optional
  user           User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  guestUserId    String? // Add guestUserId field
  guestUser      GuestUser?  @relation(fields: [guestUserId], references: [id])
  referenceId    String      @unique // Booking reference for customers
  type           BookingType
  verified       Boolean     @default(false)
  status         Status      @default(PENDING)
  // API response data stored as JSON
  apiResponse    Json // Store the full API response for reference
  bookingDetails Json // Store the essential booking details
  totalAmount    Float?
  currency       String?     @default("USD")
  // API tracking information
  apiProvider    String      @default("AMADEUS")
  apiReferenceId String? // Reference ID from Amadeus

  // Relation to reviews
  review          Review?
  travelers       Traveler[]
  locationDetails Json?
  airlineDetails  Json?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  FlightAddon FlightAddon[] @relation("BookingAddons")
  AdminEmail  AdminEmail[]

  @@index([userId])
  @@index([guestUserId])
  @@index([status])
  @@index([createdAt])
}

model Review {
  id          String      @id @default(uuid())
  bookingId   String      @unique
  booking     Booking     @relation(fields: [bookingId], references: [id])
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating      Int // Rating from 1 to 5
  comment     String? // Optional review comment
  serviceType ServiceType // What part of the service are they rating
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model FlightCart {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  flightData Json // the selected flightOffer from Amadeus
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Traveler {
  id        String   @id @default(uuid())
  Booking   Booking? @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  bookingId String?

  userId      String? // <-- Add this: link to User
  guestUserId String? // <-- Add this: link to GuestUser

  flightOfferId    String?
  flightOffer      FlightOffer? @relation(fields: [flightOfferId], references: [id], onDelete: Cascade)
  firstName        String
  lastName         String
  dateOfBirth      DateTime
  gender           String
  email            String
  phone            String
  countryCode      String
  birthPlace       String?
  passportNumber   String?
  passportExpiry   DateTime?
  issuanceCountry  String?
  validityCountry  String?
  nationality      String?
  issuanceDate     DateTime?
  issuanceLocation String?

  createdAt DateTime @default(now())

  @@index([flightOfferId])
  @@index([userId])
  @@index([guestUserId])
}

model ExcludedAirline {
  id          String   @id @default(uuid())
  airlineCode String   @unique
  reason      String?
  createdAt   DateTime @default(now())
}

model MarginSetting {
  id        String   @id @default(uuid())
  amount    Float // Fixed margin amount in USD or base currency
  currency  String   @default("USD") // Currency of the margin amount
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlightOffer {
  id        String        @id @default(uuid())
  offerData Json
  createdAt DateTime      @default(now())
  travelers Traveler[]
  addons    FlightAddon[] // Relation: available addons for this flight offer (optional)
}

model FlightAddon {
  id        String   @id @default(uuid())
  bookingId String?
  booking   Booking? @relation("BookingAddons", fields: [bookingId], references: [id], onDelete: Cascade)

  flightOfferId String? // FK to FlightOffer (optional)
  flightOffer   FlightOffer? @relation(fields: [flightOfferId], references: [id])

  name        String
  description String?
  price       Float
  currency    String   @default("USD")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([bookingId])
  @@index([flightOfferId])
}

enum ServiceType {
  OVERALL_EXPERIENCE
  FLIGHT_SERVICE
  ACCOMMODATION
  RENTAL_SERVICE
  BOOKING_PROCESS
  CUSTOMER_SUPPORT
}

enum BookingType {
  FLIGHT
  HOTEL
  CAR
}

enum Status {
  PENDING
  CONFIRMED
  PAID
  CANCELED
  REFUNDED
}

model Hotel {
  id          String   @id @default(uuid())
  name        String
  description String?
  address     String
  city        String
  country     String
  phone       String?
  email       String?
  website     String?
  rating      Float?
  price       Float?
  currency    String   @default("USD")
  images      String[] // Array of image URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tour {
  id              String   @id @default(uuid())
  name            String
  description     String?
  startDate       DateTime
  endDate         DateTime
  location        String
  price           Float
  currency        String   @default("USD")
  maxParticipants Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AdminEmail {
  id        String      @id @default(uuid())
  adminId   String
  admin     User?       @relation(fields: [adminId], references: [id])
  bookingId String?
  booking   Booking?    @relation(fields: [bookingId], references: [id])
  recipient String?
  subject   String
  message   String
  sentAt    DateTime    @default(now())
  status    EmailStatus @default(SENT)
  error     String?
}

enum EmailStatus {
  PENDING
  FAILED
  SENT
}
